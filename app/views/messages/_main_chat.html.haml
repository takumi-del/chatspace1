.chat-main
  .main-header
    .main-header__left-box
      %h2.main-header__left-box__current-group
        = @group.name
      %ul.main-header__left-box__member-list
        Member  : 
        %li.main-header__left-box__member-list__member
          =  current_user.name
          -# - @users.each do |user|
          -#   %span=user.name
    =link_to edit_group_path(@group.id) do
      .main-header__edit-btn Edit      
      
    
  
  .messages
    = render @messages
  .form
    = form_for [@group, @message] do |f|
      .input-box
        %input#message_content{type: "text",placeholder: "type a message",class:"input-box__text",name:"message[content]",}
          %label{class: "input-box__image",for:"message_image"}
            = icon('fa', 'image')
            %input.input-box__image__file{type:"file",name:"message[image]",id:"message_image"}
      %input{type:"submit",name:"commit",value:"Send",class:"submit-btn",}

      
      
      